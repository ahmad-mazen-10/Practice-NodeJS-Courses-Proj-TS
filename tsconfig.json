{
  "compilerOptions": {
    "target": "ES2020", // Target JavaScript version
    "module": "commonjs", // Module system
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for TypeScript files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true, // Skip type-checking of library files
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["src/**/*","global.d.ts"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
